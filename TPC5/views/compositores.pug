extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h1= title                    
                a.w3-btn.w3-round.w3-grey(href="/compositores/registo") +
        .w3-container
                    table.w3-table-all
                        tr
                            th Id 
                            th Nome 
                            th Periodo 
                            th Actions 
                        each slist in compositores
                            tr
                                td= slist.id
                                td 
                                    a(href="/compositores/" + slist.id)= slist.nome
                                td 
                                    a(href="/periodos/" + slist.periodo)= slist.periodo
                                td 
                                    a.w3-button.w3-blue(href='/compositores/edit/' + slist.id) Editar
                                    a.w3-button.w3-red(href='/compositores/delete/' + slist.id) Apagar

                                
        footer.w3-container.w3-blue 
            address Generated by A100692 in ${d}
extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h1= title                    
                a.w3-btn.w3-round.w3-grey(href="/periodos/registo") +
        .w3-container
                    table.w3-table-all
                        tr
                            th Id 
                            th Actions
                        each slist in periodos
                            tr
                                td
                                    a(href="/periodos/" + slist.id)= slist.id
                                td 
                                    a.w3-button.w3-blue(href='/periodos/edit/' + slist.id) Editar
                                    a.w3-button.w3-red(href='/periodos/delete/' + slist.id) Apagar                                
        footer.w3-container.w3-blue 
            address Generated by A100692 in ${d}